@using Humanizer
@inject Lobby lobby
@inject HttpClient httpClient

@if (lobby.Games.Any())
{
    <h4>Games to Join</h4>
    <div class="row">
        @foreach (var game in lobby.Games.Where(g => g.TurnNumber == 0))
        {
            <GameCard Game="game" />
        }
    </div>
}

@code {

    protected override void OnInitialized()
    {
        lobby.LobbyChanged += (e) => InvokeAsync(StateHasChanged);
    }
}
