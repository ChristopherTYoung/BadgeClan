<svg style="
    position: absolute; 
    width: @(width)%; 
    aspect-ratio: 1 / 1;

    top: @(yPercent)%;
    left: @(xPercent)%; 
  " viewBox="0 0 800 800" fill="none" xmlns="http://www.w3.org/2000/svg">
  <g>
    <path d="M0 215.385V584.615L400 800L800 584.615V215.385L400 0L0 215.385Z" stroke="#00000022" stroke-width="80" />
  </g>
</svg>


@code {
  [Parameter]
  public int Row { get; set; }
  [Parameter]
  public int Col { get; set; }
  [Parameter]
  public int Dimension { get; set; }
  private int X;
  private int Y;
  private double xPercent;
  private double yPercent;
  double width;
  protected override void OnParametersSet()
  {
    width = 100 * 1 / (double)Dimension;


    X = (int)(DisplayConstants.Dimension * (DisplayConstants.Root3 * Col + DisplayConstants.Root3 / 2.0 * Row));
    Y = (int)(DisplayConstants.Dimension * ((3.0 / 2) * Row));

    xPercent = 100 * X / (double)DisplayConstants.MapWidth;
    yPercent = 100 * Y / (double)DisplayConstants.MapHeight;
  }
}